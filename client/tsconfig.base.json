{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/src/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "shared/src/**/*.ts",
    "server/**/*.ts"
  ]
}


